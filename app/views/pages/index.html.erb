<h1>Companies</h1>
<ul>
  <% @companies.each do |c| %>
    <li> <%= c.name %> </li>
  <% end %>
</ul>

<h1>Degrees</h1>
<ul>
  <% @educations.each do |e| %>
    <li> <%= e.kind %> </li>
    <li> <%= e.grad_yr %> </li>
    <li> <%= e.school_id %> </li>
  <% end %>
</ul>


<h1>Industries</h1>
<ul>
  <% @industries.each do |i| %>
    <li> <%= i.name %> </li>
  <% end %>
</ul>

<h1>Locations</h1>
<ul>
  <% @locations.each do |l| %>
    <li> <%= l.postalcode %> </li>
  <% end %>
</ul>

<h1>People</h1>
<ul>
  <% @people.each do |p| %>
    <li> <%= p.firstname %> </li>
    <li> <%= p.lastname %> </li>
    <li> <%= p.linkedin_id %> </li>
    <li> <%= p.linkedin_url %> </li>
    <li> <h2> SCHOOLS: </h2> </li>
    <% p.schools.each do |s| %>
       <li> <%= s.name %> </li>
    <% end %>
    <li> --------- </li>
  <% end %>
</ul>